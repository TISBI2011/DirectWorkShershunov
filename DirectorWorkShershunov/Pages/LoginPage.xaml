<Page x:Class="DirectorWorkShershunov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DirectorWorkShershunov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Логин" Background="White"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Пароль" Background="White"/>
            <TextBox x:Name="TBPassword"/>
            <Button x:Name="BLogin" Content="Войти" Click="BLogin_Click"/>
            <Button x:Name="BRegistration" Content="Регистрация" Click="BRegistration_Click"/>
        </StackPanel>                                      
   </Grid>
</Page>
