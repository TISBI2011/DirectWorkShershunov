<Page x:Class="DirectorWorkShershunov.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DirectorWorkShershunov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Введите ФИО"/>
            <TextBox/>
            <TextBlock Text="Введите свой Ник"/>
            <TextBox/>
            <TextBlock Text="Поставьте аватар"/>
            <TextBox/>
            <TextBlock Text="Сщздайте Логин"/>
            <TextBox/>
            <TextBlock Text="Создайте пароль"/>
            <TextBox/>
            <Button x:Name="BSave" Content="Создать аккаунт" Click="BSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
